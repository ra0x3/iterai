{
  "manifest_version": 3,
  "name": "Itera Workflow Assistant",
  "description": "Configure IterAI model pipelines and drive refinements from Chrome.",
  "version": "0.1.0",
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Itera"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://chat.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
